{
    "name"            : "espartan-mail",
    "version"         : "0.5.0",
    "repository"      : {
        "type" : "git",
        "url"  : "https://github.com/ayltai/Espartan.git"
    },
    "bugs"            : {
        "url" : "https://github.com/ayltai/Espartan/issues"
    },
    "keywords"        : [
        "esp32",
        "smart",
        "temperature",
        "thermostat"
    ],
    "license"         : "MIT",
    "main"            : "index.ts",
    "scripts"         : {
        "clean"   : "pnpm dlx rimraf --glob **/node_modules/* pnpm-lock.yaml",
        "reset"   : "pnpm clean && pnpm i && pnpm audit -P",
        "test"    : "jest",
        "start"   : "expo start",
        "android" : "expo start --android",
        "ios"     : "expo start --ios",
        "web"     : "expo start --web"
    },
    "dependencies"    : {
        "@expo/vector-icons"             : "~15.0.3",
        "@reduxjs/toolkit"               : "^2.11.2",
        "@sentry/react-native"           : "^7.8.0",
        "date-fns"                       : "^4.1.0",
        "expo"                           : "~54.0.30",
        "expo-localization"              : "~17.0.8",
        "react"                          : "19.1.x",
        "react-native"                   : "0.81.x",
        "react-native-circular-progress" : "^1.4.1",
        "react-native-paper"             : "^5.14.5",
        "react-native-safe-area-context" : "~5.6.2",
        "react-native-screens"           : "~4.19.0",
        "react-native-svg"               : "~15.15.1",
        "react-redux"                    : "^9.2.0"
    },
    "devDependencies" : {
        "@react-native/metro-config"    : "0.81.x",
        "@testing-library/react-native" : "^13.3.3",
        "@types/jest"                   : "~29.5.14",
        "@types/react"                  : "^19.2.7",
        "jest"                          : "~29.7.0",
        "jest-expo"                     : "~54.0.16",
        "react-dom"                     : "19.1.x",
        "react-native-web"              : "^0.21.2",
        "typescript"                    : "^5.9.3"
    },
    "jest"            : {
        "collectCoverage" : true,
        "preset"          : "jest-expo"
    },
    "engines"         : {
        "node" : ">=22",
        "pnpm" : ">=10"
    }
