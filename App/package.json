{
    "name"            : "espartan-app",
    "version"         : "0.5.0",
    "repository"      : {
        "type" : "git",
        "url"  : "https://github.com/ayltai/Espartan.git"
    },
    "bugs"            : {
        "url" : "https://github.com/ayltai/Espartan/issues"
    },
    "keywords"        : [
        "esp32",
        "smart",
        "temperature",
        "thermostat"
    ],
    "license"         : "MIT",
    "main"            : "index",
    "scripts"         : {
        "clean"          : "pnpm dlx rimraf --glob **/node_modules/* pnpm-lock.yaml",
        "reset"          : "pnpm clean && pnpm i && pnpm audit -P",
        "test"           : "jest",
        "start"          : "expo start",
        "android"        : "expo start --android",
        "ios"            : "expo start --ios",
        "web"            : "expo start --web",
        "docker:deploy"  : "pnpm docker:prune docker:build docker:publish",
        "docker:build"   : "DOCKER_BUILDKIT=1 docker build --no-cache -t ayltai/geekylifehacks:espartan-app-0.5.0 .",
        "docker:publish" : "docker push ayltai/geekylifehacks:espartan-app-0.5.0",
        "docker:prune"   : "docker image remove ayltai/geekylifehacks:espartan-app-0.5.0 || true && docker system prune -f"
    },
    "dependencies"    : {
        "@expo/vector-icons"             : "~15.0.3",
        "@reduxjs/toolkit"               : "^2.11.2",
        "@sentry/react-native"           : "^7.8.0",
        "@shopify/react-native-skia"     : "~2.2.21",
        "canvaskit-wasm"                 : "^0.40.0",
        "date-fns"                       : "^4.1.0",
        "expo"                           : "~54.0.31",
        "expo-linear-gradient"           : "~15.0.8",
        "expo-localization"              : "~17.0.8",
        "react"                          : "19.1.0",
        "react-native"                   : "0.81.x",
        "react-native-circular-progress" : "^1.4.1",
        "react-native-gesture-handler"   : "^2.30.0",
        "react-native-paper"             : "^5.14.5",
        "react-native-reanimated"        : "4.1.x",
        "react-native-safe-area-context" : "~5.6.2",
        "react-native-screens"           : "~4.19.0",
        "react-native-svg"               : "~15.15.1",
        "react-native-worklets"          : "0.5.x",
        "react-redux"                    : "^9.2.0",
        "victory-native"                 : "^41.20.2"
    },
    "devDependencies" : {
        "@react-native/metro-config"    : "0.81.x",
        "@testing-library/react-native" : "^13.3.3",
        "@types/jest"                   : "~29.5.14",
        "@types/react"                  : "^19.2.8",
        "jest"                          : "~29.7.0",
        "jest-expo"                     : "~54.0.16",
        "react-dom"                     : "19.1.0",
        "react-native-web"              : "^0.21.2",
        "typescript"                    : "^5.9.3"
    },
    "jest"            : {
        "collectCoverage" : true,
        "preset"          : "jest-expo"
    },
    "engines"         : {
        "node" : ">=22",
        "pnpm" : ">=10"
    }
}
